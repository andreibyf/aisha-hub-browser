{
  "name": "aisha-hub-browser",
  "version": "2.0.0",
  "description": "Ai-SHA Hub Browser â€“ Desktop access to Ai-SHA CRM (hub-only)",
  "author": "Ai-SHA",
  "main": "src/main.js",
  "scripts": {
    "dev": "electron .",
    "dist": "electron-builder --win nsis portable --publish never",
    "agent": "node ./src/agent/agent-server.js"
  },
  "build": {
    "appId": "com.aisha.hubbrowser",
    "productName": "Ai-SHA Hub Browser",
    "asar": true,
    "files": [
      "src/**/*",
      "config/**/*",
      "assets/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "AiSHA-Hub-Browser-${version}-Setup.${ext}"
    },
    "portable": {
      "artifactName": "AiSHA-Hub-Browser-${version}-Portable.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "andreibyf",
        "repo": "aisha-hub-browser",
        "vPrefixedTagName": true
      }
    ]
  },
  "dependencies": {
    "electron-log": "^5.2.0",
    "electron-updater": "^6.3.9",
    "openai": "^5.21.0"
  },
  "devDependencies": {
    "electron": "^38.1.1",
    "electron-builder": "^24.13.3"
  }
}
